{
  "name": "fs-syncer",
  "version": "0.5.2",
  "description": "A helper to recursively read and write text files to a specified directory",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.md"
  ],
  "author": "mmkal",
  "scripts": {
    "copy-config": "copy-config --repo mmkal/copy-config",
    "eslint": "eslint --ext '.ts,.js,.md'",
    "lint": "tsc && eslint .",
    "build": "rm -rf dist && tsc -p tsconfig.lib.json",
    "prepare": "pnpm build",
    "test": "vitest run --no-file-parallelism"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.17",
    "eslint": "^8.56.0",
    "eslint-plugin-mmkal": "0.3.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "lodash": "^4.17.21",
    "memfs": "^4.7.0",
    "np": "github:mmkal/np#pnpm",
    "typescript": "5.0.4",
    "vitest": "^1.2.2"
  }
}
